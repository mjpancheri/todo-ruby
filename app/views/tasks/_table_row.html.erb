<tr class="<%= task.parent? ? 'border-top' : '' %>">
  <td class="<%= task.sub_task? ? 'ps-5' : '' %>">
    <small class="<%= task_color(task) %>"><%= task_symbol(task) %></small>
    <span class="<%= 'line-through' if task.done? %>"><%= task.description %></span>
  </td>
  <td><%= l task.due_date unless task.due_date.nil? %></td>
  <td class="text-end pe-0">
    <% if task.parent? %>
      <%= link_to "+ Sub-tarefa", new_task_path(parent_id: task.id), class: 'btn btn-success btn-sm' %>
    <% end %>

    <%= link_to "Editar", edit_task_path(task), class: 'btn btn-secondary btn-sm' %>

    <%= link_to "Apagar", task, method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: 'VocÃª tem certeza?' } %>
  </td>
</tr>
